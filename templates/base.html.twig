<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}TaskLinker{% endblock %}</title>
        {% block stylesheets %}
        {% endblock %}
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        <div id="main-container">
            <nav>
                <a href="/" id="logo">
                    <img src="{{asset('img/logo.png')}}" alt="Logo TaskLinker" />
                </a>
                <ul id="main-menu">
                    <li class="{{ app.request.attributes.get('_route') == 'app_project' ? 'active' : '' }}">
                        <a href="{{ path('app_project') }}">
                            <i class="fa-solid fa-list-check"></i> Projets
                        </a>
                    </li>
                    <li class="{{ app.request.attributes.get('_route') == 'app_team' ? 'active' : '' }}">
                        <a href="{{ path('app_team') }}">
                            <i class="fa-regular fa-user"></i> Ã‰quipe
                        </a>
                    </li>
                </ul>
            </nav>
            {% block body %}{% endblock %}
        </div>
    </body>
</html>
